<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="5dp"
             android:id="@+id/teamMembers_list_item"
             >

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:padding="10dp"
        android:background="#ffe0e0e0"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_gravity="top"
            android:id="@+id/teamMembers_list_item_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter"
            android:layout_marginRight="10dp"
            android:background="@drawable/fussballer" />

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/teamMembers_list_item_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teamMembers_list_item_icon_delete"
            android:background="@drawable/ic_action_remove"
            android:layout_gravity="right" />
    </LinearLayout>

</FrameLayout>
